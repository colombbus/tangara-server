<div class="container">
    <h2>{{'exercise.exercises'|trans}}</h2>
    <h3>{{'exercise.own_exercises'|trans}}</h3>
    <div class="list-group">
        {% for exercise in exercises %}
         <a href="{{ path( "tangara_exercise_show", {exerciseId: exercise.getId()} ) }}" class="list-group-item content-link" data-active="project">
             <h4 class="list-group-item-heading">
                {{ exercise.getName() }}
             </h4>
             {% if exercise.getDescription() is not empty %}
             <p class="list-group-item-text">
                {{ exercise.getDescription() }}
             </p>
             {% endif %}
         </a>
     {% endfor %}
    </div>
    <a href="{{ path('tangara_exercise_create') }}" class="btn btn-default content-link" data-active="project" data-title="project">
            {{'exercise.creation'|trans }} 
    </a>
    <br>
    <h3>{{'exercise.all_exercises'|trans}}</h3>
    <a href="{{ path('tangara_admin_exercises') }}" class="btn btn-default content-link" data-active="profile">
        {{'exercise.see_all_exercises'|trans }} 
    </a>
</div>